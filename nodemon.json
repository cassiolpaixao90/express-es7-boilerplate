{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules", "__tests__"],
  "verbose": true,
  "watch": ["src"],
  "execMap": {
    "js": "babel-node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}
